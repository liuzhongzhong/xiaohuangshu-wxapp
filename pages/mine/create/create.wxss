/* pages/mine/create/create.wxss */

page {
  background-color: #f5f5f5;
}

.form {
  width: 750rpx;
  background-color: #fff;
}

.cells {
  width: 690rpx;
  margin-left: 30rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
}

.cells input {
  font-size: 38rpx;
  font-weight: 400;
  width: 690rpx;
  color: #000;
}

.cells .cells-title {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  width: 500rpx;
}

.cells .input-area {
  width: 190rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.switch-class {
  transform: scale(0.8);
}

.cells .input-area text {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.cells .input-area image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 5rpx;
}

.last-line {
  border: 0;
}

.form-button {
  display: flex;
  justify-content: center;
  align-content: center;
  margin-top: 120rpx;
}

.form-button button {
  width: 600rpx;
  height: 100rpx;
  background: rgba(255, 226, 0, 1);
  border-radius: 50rpx;
  border: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.form-button button::after {
  border: 0;
}

.big-cells {
  height: 150rpx;
}

.placeholder-class {
  color: #b2b2b2;
  font-size: 38rpx;
}

.delete-button {
  margin-top: 320rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(56, 120, 255, 1);
}
